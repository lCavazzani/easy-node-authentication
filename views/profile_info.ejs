<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <script src="https://ttv-api.s3.amazonaws.com/twitch.min.js"></script>
    <script>
      Twitch.init({clientId: 'wicyupq8h14jx88i60vasnvbjj0hc8'}, function(error, status) {
        // the sdk is now loaded
      });
    </script>
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

        <!-- Twitch INFORMATION -->
        <div class="col-sm-12">
            <div class="well">
                <h3 class="text-danger"><span class="fa fa-twitch"></span> Twitch</h3>

                <% if (user.twitch.token) { %>
                    <p>
                        <strong>id</strong>: <%= user.twitch.id %><br>
                        <strong>token</strong>: <%= user.twitch.token %><br>
                        <strong>email</strong>: <%= user.twitch.email%><br>
                        <strong>name</strong>: <%= user.twitch.name %>
                    </p>

                    <a href="/unlink/twitch" class="btn btn-danger">Unlink</a>
                <% } else { %>
                    <a href="/connect/twitch" class="btn btn-danger">Connect Twitch</a>
                <% } %>
                <a href="/profile/info" class="btn btn-danger">Connect Twitch</a>
            </div>
        </div>
    </div>

</div>
</body>
</html>
